                        @Html.ValidationMessageFor(model => model.PersonelID, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="MARKA GÜNCELLE" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }

